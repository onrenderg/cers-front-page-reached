<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CERS.LoginPage"
              xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls" 
             ios:Page.UseSafeArea="true" BackgroundColor="White" >
    <NavigationPage.TitleView  >
        <StackLayout  Orientation="Horizontal" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand" >

            <Image Source="seclogo.png"  HeightRequest="40"  VerticalOptions="CenterAndExpand"/>
            <StackLayout  Orientation="Vertical" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Spacing="0">

                <Label  Text="State Election Commission, H.P." Style="{StaticResource NavigationLabelColor}" FontSize="20" FontAttributes="Bold" HorizontalTextAlignment="Center"
                      VerticalTextAlignment="Center" />

            </StackLayout>
        </StackLayout>
    </NavigationPage.TitleView>

    <Grid>
        <StackLayout Margin="9">
            <ScrollView VerticalOptions ="FillAndExpand">
                <StackLayout>

                    <!--<Frame  Margin="15,0,15,0" CornerRadius="10" BackgroundColor="White" BorderColor="WhiteSmoke" >-->
                    <StackLayout Margin="0" Padding="0">
                        <Label TextColor="Navy" TextDecorations="Underline" Text="CERS &#10; Candidate Expenditure Reporting System" HorizontalOptions="CenterAndExpand" HorizontalTextAlignment="Center"  FontSize="18" FontAttributes="Bold"/>
                        <Image Source="ic_launcher.png" x:Name="img_launcher" HorizontalOptions="Center" HeightRequest="120"/>
                    </StackLayout>
                    <!--</Frame>-->


                    <Frame   CornerRadius="10"  BorderColor="Silver" VerticalOptions="CenterAndExpand" >
                        <StackLayout  Orientation="Vertical">
                            <Label x:Name="lbl_signin" Text="Sign In" TextColor="Navy" HorizontalOptions="Center" FontSize="18" TextDecorations="Underline" FontAttributes="Bold"/>
                            <StackLayout Orientation="Horizontal">
                                <Frame  HeightRequest="45" WidthRequest="45" CornerRadius="10" Padding="0" Margin="5">
                                    <Image Source="ic_mobile.png" Aspect="AspectFill" Margin="0"/>
                                </Frame>
                                <Entry PlaceholderColor="Black" x:Name="entry_mobileno" Placeholder="Enter Mobile No."  FontAttributes="None" HorizontalOptions="FillAndExpand"
                                             Margin="0,0,20,0"  TextColor="Black" Keyboard="Numeric"  MaxLength="10"/>
                            </StackLayout>
                            <Button  x:Name="btn_getotp" Text="GET OTP" FontSize="20" FontAttributes="Bold" BackgroundColor="Navy" TextColor="White" CornerRadius="30"  HorizontalOptions="Center" Clicked="btn_getotp_Clicked" Padding="10"/>


                            <StackLayout x:Name="stack_submitotp" IsVisible="false" Orientation="Vertical">
                                <StackLayout Orientation="Horizontal">
                                    <Frame  HeightRequest="45" WidthRequest="45" CornerRadius="10" Padding="0" Margin="5">
                                        <Image Source="ic_otp.png" Aspect="AspectFill" Margin="0"/>
                                    </Frame>
                                    <Entry PlaceholderColor="Black" x:Name="entry_otp" Placeholder="Enter OTP"  FontAttributes="None" HorizontalOptions="FillAndExpand" IsTextPredictionEnabled="False" IsPassword="True"
                                             Margin="0,0,20,0" TextColor="Black" Keyboard="Numeric"  MaxLength="6"/>
                                </StackLayout>
                                <Button  x:Name="btn_submitotp" Text="Submit OTP" FontSize="20" FontAttributes="Bold" BackgroundColor="Navy" TextColor="White" CornerRadius="30"  HorizontalOptions="Center" Clicked="btn_submitotp_Clicked" Padding="10"/>
                            </StackLayout>                     

                        </StackLayout>

                    </Frame>

                    <StackLayout>
                        <Label  TextColor="Black"  Margin="0" Padding="0" LineBreakMode="WordWrap" x:Name="lbl_appdescription" HorizontalOptions="CenterAndExpand" FontSize="15"
                               Text="&lt;p style=&quot;text-align:justify;&quot;&gt; 
                                CERS (Candidate Expenditure Reporting System) mobile app is developed for the State Election Commission, Himachal Pradesh. 
                                The App has been developed to file different types of Election Expenditure Expenses. 
                                Contesting candidates or candidate's agent will be able to login into this app using their registered mobile number.
                            
                                &lt;p&gt;" TextType="Html"/>

                        <Label  TextColor="Black"  Margin="0" x:Name="lbl_appdescription1" HorizontalOptions="FillAndExpand" FontSize="15"/>
                    </StackLayout>


                </StackLayout>
            </ScrollView>

            <StackLayout Orientation="Vertical" Margin="10,5,10,5" HorizontalOptions="FillAndExpand"   >
                <Label Text="Centre Of Competence For Mobile Application Development NIC Himachal Pradesh" FontSize="14" Padding="5" BackgroundColor="White" TextColor="Navy" HorizontalTextAlignment="Center" FontAttributes="Bold"></Label>
            </StackLayout>
        </StackLayout>

        <ContentView x:Name="Loading_activity" BackgroundColor="#C0808080" Padding="20, 20" IsVisible="false" AbsoluteLayout.LayoutBounds="0, 0, 1, 1" AbsoluteLayout.LayoutFlags="All">
            <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
                <Frame BackgroundColor="White" HorizontalOptions="FillAndExpand">
                    <StackLayout Orientation="Horizontal" Margin="6" HorizontalOptions="FillAndExpand">
                        <ActivityIndicator IsVisible="true" IsRunning="true" Margin="5"/>
                        <Label x:Name="lbl_PleaseWait" Text="Please Wait ..." TextColor="Black" FontAttributes="Bold" HorizontalOptions="FillAndExpand" WidthRequest="600" VerticalTextAlignment="Center"/>
                    </StackLayout>
                </Frame>
            </StackLayout>
        </ContentView>

        <ContentView x:Name="popupDetails_Verified" BackgroundColor="#C0808080" Padding="40, 40" IsVisible="false" AbsoluteLayout.LayoutBounds="0, 0, 1, 1" AbsoluteLayout.LayoutFlags="All">
            <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
                <Frame BorderColor="#0596f7" CornerRadius="15"  Padding="10" VerticalOptions="FillAndExpand">
                    <StackLayout>
                        <ScrollView>
                            <StackLayout Orientation="Vertical" VerticalOptions="FillAndExpand" BackgroundColor="White" Spacing="8" Padding="6">
                                <Label x:Name="lbl_popupheading"  Text="Confirm Your Details!" TextColor="#0596f7" HorizontalOptions="CenterAndExpand" FontAttributes="Bold" FontSize="16"/>
                                <BoxView HeightRequest="2" BackgroundColor="#0596f7" WidthRequest="1000" HorizontalOptions="FillAndExpand"/>
                                <Image  Source="Verify_ico.png" Margin="10" HeightRequest="40"/>
                                <Label IsVisible="false" x:Name="lbl_usertypeheading" FontAttributes="Bold" TextColor="#0596f7" HorizontalOptions="FillAndExpand" HorizontalTextAlignment="Center" FontSize="16"/>

                                <BoxView HeightRequest="2" BackgroundColor="#0596f7" WidthRequest="1000" HorizontalOptions="FillAndExpand"/>
                                <Label Text="EPIC NO" HorizontalOptions="FillAndExpand"  TextColor="Black" FontSize="16"/>
                                <Label Text="" x:Name="Lbl_EPIC_NO" HorizontalOptions="Fill" FontAttributes="Bold" TextColor="Black" FontSize="16"/>
                                <Label Text="VOTER NAME"  HorizontalOptions="FillAndExpand"  TextColor="Black" FontSize="16"/>
                                <Label Text="" x:Name="Lbl_VOTER_NAME" HorizontalOptions="Fill" FontAttributes="Bold" TextColor="Black" FontSize="16"/>
                                <Label Text="RELATIVE NAME"  HorizontalOptions="FillAndExpand"  TextColor="Black" FontSize="16"/>
                                <Label Text="" x:Name="Lbl_RELATIVE_NAME" HorizontalOptions="Fill" FontAttributes="Bold" TextColor="Black" FontSize="16"/>
                                <Label Text="Panchayat Name" HorizontalOptions="FillAndExpand"  TextColor="Black" FontSize="16"/>
                                <Label Text="" x:Name="Lbl_Panchayat_Name" HorizontalOptions="Fill" FontAttributes="Bold" TextColor="Black" FontSize="16"/>
                                <Label Text="Contesting For" HorizontalOptions="FillAndExpand"  TextColor="Black" FontSize="16"/>
                                <Label Text="" x:Name="Lbl_NominationFor" HorizontalOptions="Fill" FontAttributes="Bold" TextColor="Black" FontSize="16"/>
                                <BoxView HeightRequest="2" BackgroundColor="#0596f7" WidthRequest="1000" HorizontalOptions="FillAndExpand"/>

                               
                            </StackLayout>
                        </ScrollView>
                        <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                            <Button BackgroundColor="#0596f7" TextColor="White" FontAttributes="Bold"  x:Name="Btn_NotMe" Clicked="Btn_NotMe_Clicked" Text="Not Me !" HorizontalOptions="FillAndExpand"/>
                            <Button BackgroundColor="#0596f7" TextColor="White" FontAttributes="Bold"  x:Name="Btn_Continue" Clicked="Btn_Continue_Clicked" Text="Confirm" HorizontalOptions="FillAndExpand"/>
                        </StackLayout>
                    </StackLayout>

                </Frame>
            </StackLayout>
        </ContentView>

    </Grid>
</ContentPage>